<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.MovieDB">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".MovieApp"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.SearchActivity"
            android:theme="@style/DetailsTheme" />
        <activity android:name=".ui.activity.Seenlist" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDRTpmIFSCy7Wgyp-VuZx7MwS-IDb17nZM" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity android:name=".ui.activity.Wishlist" />
        <activity android:name=".ui.activity.NearBy" />
        <activity android:name=".ui.activity.TopRated" />
        <activity android:name=".ui.activity.Upcoming" />
        <activity android:name=".ui.activity.Popular" />
        <activity android:name=".ui.activity.Profile" />
        <activity android:name=".ui.activity.AboutApp" />
        <activity
            android:name=".ui.activity.ActorActivity"
            android:theme="@style/DetailsTheme" />
        <activity
            android:name=".ui.activity.ReviewActivity"
            android:theme="@style/DetailsTheme" />
        <activity android:name=".ui.activity.ProfileActivity" />
        <activity
            android:name=".ui.activity.NavigationViewActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.Splash"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.MovieDetails"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.NowPlaying"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait" />
    </application>

</manifest>